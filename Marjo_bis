# Plot the evolution of the percentage of female by region 
fig, ax = plt.subplots(2, 3, figsize=(15, 10), sharex=True, sharey=True)


i = 0
for idx, data in movies_female_gp_year.groupby(level=0):
    sbplt = ax[i%2, math.floor(i/3)]
    sbplt.scatter(data.index.get_level_values(level=1), data.values, s=5)
    sbplt.set_title(idx)
    i = i+1

fig.tight_layout()

fig.text(0.4,0, "Movie length in minutes")
fig.text(0,0.6, "Number of movies", rotation = 90)

